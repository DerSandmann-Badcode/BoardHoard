<?xml version="1.0" encoding="utf-8"?>
<!--Board Database-->
<sites>
  <site>
    <name>boards.4chan.org</name>
    <subject>//span[@class = 'subject']</subject>
    <thread>//div[@class = 'thread']</thread>
    <thread_tag>id</thread_tag>
	<board></board>
	<board_tag></board_tag>
    <image>//a[@class='fileThumb']</image>
    <image_tag>href</image_tag>
    <thumb>//a[@class = 'fileThumb']//img</thumb>
    <thumb_tag>src</thumb_tag>
  </site>
  <site>
    <name>8ch.net</name>
    <subject>//span[@class = 'subject']</subject>
    <thread>//input[@name = 'thread']</thread>
    <thread_tag>value</thread_tag>
	<board>//input[@name = 'board']</board>
	<board_tag>value</board_tag>
    <image>//div[@class='file']//a | //div[@class='file multifile']//a</image>
    <image_tag>href</image_tag>
    <thumb>//div[@class='file']//img | //div[@class='file multifile']//img</thumb>
    <thumb_tag>src</thumb_tag>
  </site>
  <site>
    <name>7chan.org</name>
    <subject>//span[@class = 'subject']</subject>
    <thread>//div[contains(@id, 'thread_')]</thread>
    <thread_tag>id</thread_tag>
	<board>//input[@name = 'board']</board>
	<board_tag>value</board_tag>
    <image>//div[@class = 'post_thumb']//a</image>
    <image_tag>href</image_tag>
    <thumb>//div[@class = 'post_thumb']//img</thumb>
    <thumb_tag>src</thumb_tag>
  </site>
  <site>
    <name>krautchan.net</name>
    <subject>//span[@class = 'postsubject']</subject>
    <thread>//input[@name = 'redirect']</thread>
    <thread_tag>value</thread_tag>
	<board></board>
	<board_tag></board_tag>
    <image>//div[@class = 'file_thread']//a[@target= '_blank'] | //div[@class = 'file_reply']//a[@target= '_blank']</image>
    <image_tag>href</image_tag>
    <thumb>//div[@class='file_thread']//img[@id = 'thumb'] | //div[@class='file_reply']//img[@id = 'thumb']</thumb>
    <thumb_tag>src</thumb_tag>
  </site>
  <site>
    <name>anon-ib.ch</name>
    <subject>//span[@class = 'subject']</subject>
    <thread>//a[@class = 'post_anchor']</thread>
    <thread_tag>id</thread_tag>
	<board>//input[@name = 'board']</board>
	<board_tag>value</board_tag>
    <image>//div[@class = 'file']//a</image>
    <image_tag>href</image_tag>
    <thumb>//div[@class = 'file']//img</thumb>
    <thumb_tag>src</thumb_tag>
  </site>
  <site>
    <name>uncleb.net</name>
    <subject>//span[@class = 'subject']</subject>
    <thread>//a[@class = 'post_anchor']</thread>
    <thread_tag>id</thread_tag>
	<board>//input[@name = 'board']</board>
	<board_tag>value</board_tag>
    <image>//div[@class = 'file']//a</image>
    <image_tag>href</image_tag>
    <thumb>//div[@class = 'file']//img</thumb>
    <thumb_tag>src</thumb_tag>
  </site>
  <site>
    <name>gurochan.ch</name>
    <subject>//a[@class = 'thread_subject']</subject>
    <thread>//div[@class = 'thr-cont']</thread>
    <thread_tag>data-tid</thread_tag>
	<board>//input[@name = 'board']</board>
	<board_tag>value</board_tag>
    <image>//td[@class = 'post_image']//a</image>
    <image_tag>href</image_tag>
    <thumb>//td[@class = 'post_image']//img</thumb>
    <thumb_tag>src</thumb_tag>
  </site>
</sites>